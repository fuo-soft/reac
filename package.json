{
	"name": "reac",
	"displayName": "REgex-based Auto Correct",
	"description": "auto-correct",
	"version": "0.0.1",
	"publisher": "fuo-soft",
	"license": "LGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/fuo-soft/reac"
	},
	"funding": "https://www.buymeacoffee.com/fuosoft",
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:type"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "reac.reloadCfg",
				"category": "reac",
				"title": "Reload Configuration"
			}
		],
		"configuration": {
			"type": "object",
			"title": "reac",
			"properties": {
				"reac.triggerPattern": {
					"type": "string",
					"default": "\\W"
				},
				"reac.wordPattern": {
					"type": "string",
					"default": "\\w+"
				},
				"reac.replacerSource": {
					"type": "string",
					"enum": [
						"internal",
						"external",
						"both"
					],
					"default": "external"
				},
				"reac.replacers": {
					"type": "array",
					"default": [
						{
							"languages": [
								".*"
							],
							"patterns": [
								[
									"[A-Z]{2}[a-z]+",
									"$&",
									"t",
									"FIxes my HEavy SHift KEy"
								],
								[
									"([a-z])\\1{2,}",
									"$1$1",
									"igsp",
									"tooo many"
								]
							]
						},
						{
							"languages": [
								"(java|type)script(react)?|c(pp|sharp)?|java"
							],
							"patterns": [
								[
									"pirate",
									"private"
								],
								[
									"pubic",
									"public"
								],
								[
									"c(nost|osnt|onts)",
									"const"
								]
							]
						},
						{
							"languages": [
								"markdown|plaintext"
							],
							"patterns": [
								[
									"abuot",
									"about",
									"ip"
								],
								[
									"atfer",
									"after",
									"ip"
								],
								[
									"agian(st)?",
									"again$1",
									"ip"
								],
								[
									"aslo",
									"also",
									"ip"
								],
								[
									"([bnmst])a",
									"a$1",
									"ip"
								],
								[
									"([bcfghtw])([ai])l",
									"$1$2ll",
									"ip"
								],
								[
									"([kstw])il",
									"$1ill",
									"ip"
								],
								[
									"a([dty])n",
									"an$1",
									"ip"
								],
								[
									"e([bhw])",
									"$1e",
									"ip"
								],
								[
									"pu",
									"up",
									"ip"
								],
								[
									"(fro?|ofr|orf)",
									"for",
									"ip",
									"i'm on the fence about including 'fro' as a mispelling"
								],
								[
									"ti(s)?",
									"it$1",
									"ip"
								],
								[
									"([fns])i",
									"i$1",
									"ip"
								],
								[
									"([fhnr])o",
									"o$1",
									"ip"
								],
								[
									"o([gst])",
									"$1o",
									"ip"
								],
								[
									"([bcr]a|(br|l|sp)i|[ms]e|scu)t(le|el)",
									"$1ttle",
									"ip"
								],
								[
									"(teh|hte|t[he])([my])?",
									"the$2",
									"ip"
								],
								[
									"lie([cfkmnv])",
									"li$1e",
									"ip"
								],
								[
									"(teh|hte|th)n",
									"then",
									"ip",
									"Special case: 'ten' is a word"
								],
								[
									"([hmps])u",
									"u$1",
									"ip"
								],
								[
									"w(il|li)",
									"will",
									"ip"
								],
								[
									"w(ehn|hne)",
									"when",
									"ip"
								]
							]
						}
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.47.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0"
	}
}
